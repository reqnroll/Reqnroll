<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsReqnrollTestFrameworkAdapter>true</IsReqnrollTestFrameworkAdapter>

    <!-- NuGet package metadata -->
    <PackageId>Reqnroll.MSTest</PackageId>
    <Description>Package to use Reqnroll for use with MsTest v2.</Description>
    <PackageTags>reqnroll mstest</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- PrivateAssets="none" ensures that MSTest build assets are included even if the user does not explicitly add a reference to the 'MSTest.TestFramework' package -->
    <!-- We can consider removing PrivateAssets="none" in v4 and declaring that the users must add reference to 'MSTest.TestFramework' explicitly. -->
    <PackageReference Include="MSTest.TestFramework" Version="2.2.8" PrivateAssets="none" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Reqnroll.MSTest.Generator.ReqnrollPlugin\Reqnroll.MSTest.Generator.ReqnrollPlugin.csproj"
      PrivateAssets="all"
      PackAsReqnrollGeneratorPlugin="true" />
  </ItemGroup>

</Project>
