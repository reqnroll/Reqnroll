<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsReqnrollTestFrameworkAdapter>true</IsReqnrollTestFrameworkAdapter>

    <!-- NuGet package metadata -->
    <PackageId>Reqnroll.MSTest</PackageId>
    <Description>Package to use Reqnroll for use with MsTest v2.</Description>
    <PackageTags>reqnroll mstest</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DefaultLanguage>en-US</DefaultLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSTest.TestFramework" Version="2.2.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Reqnroll.MSTest.Generator.ReqnrollPlugin\Reqnroll.MSTest.Generator.ReqnrollPlugin.csproj"
      PrivateAssets="all"
      PackAsReqnrollGeneratorPlugin="true" />
  </ItemGroup>

</Project>
