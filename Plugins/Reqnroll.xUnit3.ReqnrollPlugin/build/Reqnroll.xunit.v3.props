<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup>
    <GenerateReqnrollAssemblyHooksFile Condition="'$(GenerateReqnrollAssemblyHooksFile)' == ''">true</GenerateReqnrollAssemblyHooksFile>
  </PropertyGroup>
  
  <ItemGroup>
    <ReqnrollGeneratorPlugins Include="$(MSBuildThisFileDirectory)netstandard2.0\Reqnroll.xUnit3.Generator.ReqnrollPlugin.dll" />
  </ItemGroup>

  <ItemGroup Condition="'$(Language)' == 'C#'">
    <ReqnrollAssemblyHooksTemplate Include="$(MSBuildThisFileDirectory)*.AssemblyHooks.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(Language)' == 'VB'">
    <ReqnrollAssemblyHooksTemplate Include="$(MSBuildThisFileDirectory)*.AssemblyHooks.vb" />
  </ItemGroup>

</Project>
