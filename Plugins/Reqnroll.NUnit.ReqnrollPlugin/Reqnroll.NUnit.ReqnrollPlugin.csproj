<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <IsReqnrollTestFrameworkAdapter>true</IsReqnrollTestFrameworkAdapter>

    <!-- NuGet package metadata -->
    <PackageId>Reqnroll.NUnit</PackageId>
    <Description>Package to use Reqnroll with NUnit 3.13 and later.</Description>
    <PackageTags>reqnroll nunit</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DefaultLanguage>en-US</DefaultLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NUnit" Version="3.13.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Reqnroll.NUnit.Generator.ReqnrollPlugin\Reqnroll.NUnit.Generator.ReqnrollPlugin.csproj"
      PrivateAssets="all"
      PackAsReqnrollGeneratorPlugin="true" />
  </ItemGroup>

</Project>
