<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Reqnroll.MsTestv4</id>
    <version>$version$</version>
    <title>Reqnroll.MsTestv4</title>
    <authors>$author$</authors>
    <owners>$owner$</owners>
    <description>Package to use Reqnroll for use with MsTest v4. $summary$</description>
    <language>en-US</language>
    <projectUrl>https://www.reqnroll.net</projectUrl>
    <repository type="git" url="https://github.com/reqnroll/Reqnroll.git" branch="$branch$" commit="$commit$" />
    <icon>images\reqnroll-icon.png</icon>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">BSD-3-Clause</license>
    <tags>reqnroll mstest</tags>
    <copyright>$copyright$</copyright>
    <dependencies>
      <group targetFramework=".NETStandard2.0">
        <dependency id="Reqnroll" version="[$version$]" />
        <dependency id="Reqnroll.Tools.MsBuild.Generation" version="[$version$]" />
        <dependency id="MSTest.TestFramework" version="4.0.0" />
      </group>
    </dependencies>
  </metadata>

  <files>
    <file src="build\**\*" exclude="build\*.template.*" target="build" />
    <file src="bin\$config$\netstandard2.0\Reqnroll.MSTestv4.ReqnrollPlugin.*" target="lib\netstandard2.0" />

    <file src="bin\$config$\netstandard2.0\Reqnroll.MSTestv4.Generator.ReqnrollPlugin.dll" target="build\netstandard2.0" />
    <file src="bin\$config$\netstandard2.0\Reqnroll.MSTestv4.Generator.ReqnrollPlugin.pdb" target="build\netstandard2.0" />

    <file src="$SolutionDir$LICENSE" target="LICENSE" />
    <file src="$SolutionDir$reqnroll-icon.png" target="images\" />
  </files>
</package>
