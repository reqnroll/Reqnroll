<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <IsReqnrollTestFrameworkAdapter>true</IsReqnrollTestFrameworkAdapter>
    
    <!-- NuGet package metadata -->
    <PackageId>Reqnroll.TUnit</PackageId>
    <Description>Package to use Reqnroll with TUnit 0.55.23 and later.</Description>
    <PackageTags>reqnroll TUnit</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DefaultLanguage>en-US</DefaultLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TUnit.Core" Version="0.55.23" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Reqnroll.TUnit.Generator.ReqnrollPlugin\Reqnroll.TUnit.Generator.ReqnrollPlugin.csproj"
      PrivateAssets="all"
      PackAsReqnrollGeneratorPlugin="true" />
  </ItemGroup>

</Project>
