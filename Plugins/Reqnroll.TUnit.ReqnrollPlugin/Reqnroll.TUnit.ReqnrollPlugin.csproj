<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <IsReqnrollTestFrameworkAdapter>true</IsReqnrollTestFrameworkAdapter>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- NuGet package metadata -->
    <PackageId>Reqnroll.TUnit</PackageId>
    <Description>Package to use Reqnroll with TUnit 1.3.25 and later.</Description>
    <PackageTags>reqnroll TUnit</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TUnit.Core" Version="1.3.25" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Polyfill" Version="9.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Reqnroll.TUnit.Generator.ReqnrollPlugin\Reqnroll.TUnit.Generator.ReqnrollPlugin.csproj"
      PrivateAssets="all"
      PackAsReqnrollGeneratorPlugin="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
